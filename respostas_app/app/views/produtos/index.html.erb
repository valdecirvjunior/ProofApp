<h1>Lista de produtos</h1>

<table>
  <thead>
    <tr>
      <th>Item</th>
      <th>Importante</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @produtos.each do |produto| %>
      <tr>
        <td><%= produto.item %></td>
        <td><%= produto.importante %></td>
        <td><%= link_to 'Ver', produto %></td>
        <td><%= link_to 'Editar', edit_produto_path(produto) %></td>
        <td><%= link_to 'Apagar', produto, method: :delete, data: { confirm: 'Apagar Item?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Produto', new_produto_path %></br>
<%= link_to 'Menu', menu_index_path %>
      
